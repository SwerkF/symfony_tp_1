{% extends 'base.html.twig' %}

{% block title %} Edit {{marque.nom}} {% endblock %}

{% block body %}
<div class="card mt-3">
    <div class="card-header card-title"><h1 class="card-title">Edit {{marque.nom}}</h1></div>
    <div class="card-body">
        {{ form_start(editform) }}
            {{ form_errors(editform) }}
            {{ form_row(editform.nom) }}
            {{ form_row(editform.date) }}
            <div class="row mb-2">
                <div class="col-2">
                    <img src="{{asset('uploads/images/' ~ marque.logo)}}" style="height: 100px"/>
                </div>
                <div class="col-10">
                    {{ form_row(editform.logo) }}
                </div>
            </div>
        {{ form_end(editform) }}
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5>Liste des mod√®les</h5>
    </div>
    <div class="card-body">
        {% for modele in marque.modeles %}
            <li><a href={{path('app_modele_id', {'id': modele.id})}}>{{ modele.nom }}</a></li>
        {% endfor %}
    </div>
</div>
{% endblock %}
