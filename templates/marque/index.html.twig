{% extends 'base.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}
<h1>Nos marques</h1>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Ajouter une marque
</button>

<table class="table table-stripped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nom</td>
            <td>Logo</td>
            <td>Date de création</td>
            <td>Liste des modèles</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {% for marque in marques %}
            <tr>
                <td><a href="{{ path('app_marque_id', {'id': marque.id}) }}"> {{ marque.id }} </a></td>
                <td>{{ marque.nom }}</td>
                <td><img src="{{asset('uploads/images/' ~ marque.logo)}}" style="height: 50px"/></td>
                <td>{{ marque.date|date('d/m/Y') }}</td>
                <td>
                    <ul>
                        {% for modele in marque.modeles %}
                            <li><a href={{path('app_modele_id', {'id': modele.id})}}>{{ modele.nom }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_marque_id', {'id': marque.id})}}"> Voir </a>
                    <a class="btn btn-danger" href="{{ path('app_marque_delete', {'id': marque.id})}}"> Supprimer </a>
                </td>
                 
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune marque.</td>
            </tr>
           
        {% endfor %}
    </tbody>
</table>

